<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingSubmissionBelajarFundamentalAplikasiAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textColorPrimary">@color/textColorBlack</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextNormal">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="TextBold">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="TextNormal.TextVerySmall" parent="TextNormal">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="TextNormal.TextSmall" parent="TextNormal">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextNormal.TextNormal" parent="TextNormal">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextNormal.TextHeader" parent="TextNormal">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextBold.TextNormal" parent="TextBold">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextBold.TextTitle" parent="TextBold">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBold.TextHeader" parent="TextBold">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Abu abu -->
    <style name="TextNormal.TextSmall.TextGrey" parent="TextNormal.TextSmall">
        <item name="android:textColor">@color/abuabu_tua</item>
    </style>
</resources>